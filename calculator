<html>
    <head>
      <script>
        var a="";
        function change(val){
            a+=val;
            if(val=="+"||val=="-"||val=="*"||val=="/"){
                var w=val;
            }
            else{
                var r=val;
                document.getElementById("box").value=r;
            }
        }
        function remove(){
        document.getElementById("box").value=" ";
        a="";
        }
        function ans(){
            var q=document.getElementById("box").value;
            var p=eval(a);
            document.getElementById("box").value=p;
        }
      </script>
        <style>
            .container{
                width: 280px;
                height: 340px;
                background-color: black;
          border-radius:4px;
            }
            button{
                background-color: black;
